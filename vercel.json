{
    "version": 2,
    "builds": [
      { "src": "api/*.js", "use": "@vercel/node" },
      { "src": "src/**/*", "use": "@vercel/static-build", "config": { "distDir": "build" } }
    ],
    "routes": [
      { "src": "/api/submit-form", "dest": "api/submit-form.js" },
      { "src": "/api/messages", "dest": "api/messages.js" }
    ]
  }